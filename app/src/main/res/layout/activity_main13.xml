<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity13">

    <!--    Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/BackBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_back"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Edit Profile"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/SaveChanges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="Save Changes"
            android:textSize="16dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="#EE8205"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginVertical="20dp">
        <TextView
            android:id="@+id/NameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/NameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/gray_placeholder_input"
            android:hint="Enter name"
            android:padding="10dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/EmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameInput"
            android:paddingLeft="20dp"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/EmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EmailText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/gray_placeholder_input"
            android:hint="Enter email"
            android:padding="10dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ContactText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/EmailInput"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Contact Number"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/ContactInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContactText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/gray_placeholder_input"
            android:hint="Enter contact number"
            android:padding="10dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/CountryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContactInput"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Country"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/CountryInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_placeholder_input"
            android:layout_below="@id/CountryText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            >

            <Spinner
                android:id="@+id/CountryInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/black"
                android:padding="10dp"
                android:pointerIcon="arrow"
                android:spinnerMode="dropdown"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/CityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/CountryInputLayout"
            android:text="City"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/CityInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_placeholder_input"
            android:layout_below="@id/CityText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            >

            <Spinner
                android:id="@+id/CityInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/black"
                android:padding="10dp"
                android:pointerIcon="arrow"
                android:spinnerMode="dropdown"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>